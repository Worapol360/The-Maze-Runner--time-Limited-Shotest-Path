<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.the.maze.runner.controller.InputController"
      spacing="25"
      alignment="TOP_CENTER"
      prefWidth="1100" prefHeight="820"
      style="-fx-background-color: #121212;">

    <!-- TITLE -->
    <Label text="THE MAZE INITIALIZE"
           style="
               -fx-text-fill: #58a6ff;
               -fx-font-size: 52px;
               -fx-font-weight: bold;
               -fx-letter-spacing: 4px;
               -fx-effect: dropshadow(gaussian, #1a4a7a, 20, 0.45, 0, 0);
               -fx-padding: 40 0 10 0;
           "/>

    <!-- MAIN CONTENT -->
    <HBox spacing="40" alignment="TOP_CENTER" maxWidth="1000">

        <!-- LEFT: MANUAL INPUT -->
        <VBox spacing="15" prefWidth="320" alignment="CENTER">
            <Label text="Enter Maze Manually"
                   style="-fx-font-size: 20px; -fx-text-fill: #CCCCCC; -fx-font-weight: bold;"/>

            <TextArea fx:id="mazeInputArea"
                      prefHeight="280"
                      wrapText="false"
                      style="
                          -fx-background-color: #1e1e1e;
                          -fx-control-inner-background: #1e1e1e;
                          -fx-text-fill: #EDEDED;
                          -fx-font-size: 14px;
                          -fx-highlight-fill: #3366ff;
                          -fx-border-color: #333333;
                          -fx-border-radius: 8;
                          -fx-background-radius: 8;
                          -fx-padding: 12;
                      "/>

            <Button text="ðŸ“‚ Load From File"
                    onAction="#onChooseFile"
                    prefWidth="200" prefHeight="40"
                    style="
                        -fx-background-color: #3366ff;
                        -fx-text-fill: white;
                        -fx-background-radius: 10;
                        -fx-font-size: 16px;
                        -fx-cursor: hand;
                        -fx-effect: dropshadow(gaussian, #1d3fa0, 12, 0.2, 0, 0);
                    "/>
        </VBox>

        <!-- MIDDLE: MAZE GENERATOR -->
        <VBox spacing="20" alignment="TOP_CENTER" prefWidth="330">

            <Label text="Generate New Maze"
                   style="-fx-font-size: 20px; -fx-text-fill: #CCCCCC; -fx-font-weight: bold;"/>

            <Button text="âœ¨ Generate Maze"
                    onAction="#onGenerateMaze"
                    prefWidth="300" prefHeight="45"
                    style="
                        -fx-background-color: linear-gradient(#00b06a, #009e5f);
                        -fx-text-fill: white;
                        -fx-background-radius: 10;
                        -fx-font-size: 17px;
                        -fx-cursor: hand;
                        -fx-effect: dropshadow(gaussian, #007a48, 15, 0.25, 0, 0);
                    "/>

            <!-- Size Inputs -->
            <HBox spacing="20" alignment="CENTER">
                <VBox spacing="5">
                    <Label text="Seed"
                           style="-fx-text-fill: #BBBBBB; -fx-font-size: 14px;"/>
                    <TextArea fx:id="mazeGenerateSeed"
                               text="66"
                               prefRowCount="1"
                               prefWidth="90"
                               style="
                                   -fx-background-color: #1e1e1e;
                                   -fx-control-inner-background: #1e1e1e;
                                   -fx-text-fill: #EDEDED;
                                   -fx-border-radius: 6;
                                   -fx-background-radius: 6;
                                   -fx-border-color: #333;
                                   -fx-padding: 6;
                               "/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Width"
                           style="-fx-text-fill: #BBBBBB; -fx-font-size: 14px;"/>
                    <TextArea fx:id="mazeGenerateWidth"
                               text="50"
                               prefRowCount="1"
                               prefWidth="90"
                               style="
                                   -fx-background-color: #1e1e1e;
                                   -fx-control-inner-background: #1e1e1e;
                                   -fx-text-fill: #EDEDED;
                                   -fx-border-radius: 6;
                                   -fx-background-radius: 6;
                                   -fx-border-color: #333;
                                   -fx-padding: 6;
                               "/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Height"
                           style="-fx-text-fill: #BBBBBB; -fx-font-size: 14px;"/>
                    <TextArea fx:id="mazeGenerateHeight"
                               text="50"
                               prefRowCount="1"
                               prefWidth="90"
                               style="
                                   -fx-background-color: #1e1e1e;
                                   -fx-control-inner-background: #1e1e1e;
                                   -fx-text-fill: #EDEDED;
                                   -fx-border-radius: 6;
                                   -fx-background-radius: 6;
                                   -fx-border-color: #333;
                                   -fx-padding: 6;
                               "/>
                </VBox>
            </HBox>

            <Separator orientation="HORIZONTAL" prefHeight="25" />

            <Label text="Quick Examples"
                   style="-fx-font-size: 16px; -fx-text-fill: #CCCCCC;"/>

            <GridPane hgap="5" vgap="10" alignment="CENTER">
                <!-- 6 Example Buttons -->
                <Button text="15x15" onAction="#onExample1" GridPane.columnIndex="0" GridPane.rowIndex="0"
                        prefWidth="90"
                        style="-fx-background-color:#393939; 
                        -fx-text-fill:#DEDEDE; -fx-background-radius:6; -fx-padding:10; -fx-cursor: hand;"/>
                <Button text="40x40" onAction="#onExample2" GridPane.columnIndex="1" GridPane.rowIndex="0"
                        prefWidth="90"
                        style="-fx-background-color:#393939; -fx-text-fill:#DEDEDE; -fx-background-radius:6; -fx-padding:10; -fx-cursor: hand;"/>
                <Button text="50x50" onAction="#onExample3" GridPane.columnIndex="2" GridPane.rowIndex="0"
                        prefWidth="90"
                        style="-fx-background-color:#393939; -fx-text-fill:#DEDEDE; -fx-background-radius:6; -fx-padding:10; -fx-cursor: hand;"/>
                <Button text="60x60" onAction="#onExample4" GridPane.columnIndex="0" GridPane.rowIndex="1"
                        prefWidth="90"
                        style="-fx-background-color:#393939; -fx-text-fill:#DEDEDE; -fx-background-radius:6; -fx-padding:10; -fx-cursor: hand;"/>
                <Button text="70x60" onAction="#onExample5" GridPane.columnIndex="1" GridPane.rowIndex="1"
                        prefWidth="90"
                        style="-fx-background-color:#393939; -fx-text-fill:#DEDEDE; -fx-background-radius:6; -fx-padding:10; -fx-cursor: hand;"/>
                <Button text="100x100" onAction="#onExample6" GridPane.columnIndex="2" GridPane.rowIndex="1"
                        prefWidth="90"
                        style="-fx-background-color:#393939; -fx-text-fill:#DEDEDE; -fx-background-radius:6; -fx-padding:10; -fx-cursor: hand;"/>
            </GridPane>
        </VBox>

        <!-- RIGHT: OUTPUT + EXAMPLES -->
        <VBox spacing="20" prefWidth="350">

            <Label text="Maze Visualization"
                   style="-fx-font-size: 20px; -fx-text-fill: #CCCCCC; -fx-font-weight: bold;"/>

            <HBox alignment="CENTER" VBox.vgrow="ALWAYS" style="-fx-padding: 10;">
                <Pane fx:id="gridPane" 
                    prefWidth="280" prefHeight="280"
                      style="-fx-background-color: #1e1e1e;
                             -fx-border-color: #333333;
                             -fx-border-width: 2;
                             -fx-border-radius: 10;
                             -fx-background-radius: 10;
                             -fx-effect: innershadow(gaussian, #000000, 10, 0.5, 0, 0);
                             
                             -fx-padding: 5;"
                      /> 
            </HBox>
        </VBox>
    </HBox>

    <!-- FOOTER -->
    <HBox alignment="CENTER" spacing="600" style="-fx-padding:30 0 10 0;">
        <Button text="Back"
                onAction="#onBack"
                prefWidth="120" prefHeight="40"
                style="
                    -fx-background-color: #444;
                    -fx-text-fill: #EEE;
                    -fx-font-size: 16px;
                    -fx-background-radius: 8;
                    -fx-cursor: hand;
                "/>

        <Button text="Solve Maze"
                onAction="#onContinue"
                prefWidth="140" prefHeight="40"
                style="
                    -fx-background-color: #ffaa00;
                    -fx-text-fill: #121212;
                    -fx-font-weight: bold;
                    -fx-font-size: 17px;
                    -fx-background-radius: 8;
                    -fx-cursor: hand;
                "/>
    </HBox>

</VBox>
